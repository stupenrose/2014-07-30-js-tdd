<project>
	<modelVersion>4.0.0</modelVersion>

	<groupId>us.penrose</groupId>
	<artifactId>whatever</artifactId>
	<version>0.0.1</version>
	<build>
		<plugins>
			<plugin>
				<groupId>com.cj.jshintmojo</groupId>
				<artifactId>jshint-maven-plugin</artifactId> 
				<version>1.3.0</version>
				<executions>
					<execution>
						<goals>
							<goal>lint</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<version>2.4.1</version>
					<options>maxparams:3,camelcase,eqeqeq,forin,immed,latedef,noarg,noempty,nonew</options>
					<globals>require,$</globals>
					<failOnError>true</failOnError>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.cj.qunit.mojo</groupId>
				<artifactId>qunit-maven-plugin</artifactId>
				<version>2.2.0</version>
				<executions>
					<execution>
						<phase>test</phase>
						<goals>
							<goal>test</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<webPathToRequireDotJsConfig>/config.js</webPathToRequireDotJsConfig>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
